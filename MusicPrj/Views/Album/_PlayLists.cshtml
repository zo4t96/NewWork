        $(function () {
            $('h3').click(function () {
                if ($(this).next('.foldPL').hasClass('o') == true) {
                    $(this).find('i.fa').removeClass('fa-chevron-down').addClass('fa-chevron-right');
                    $(this).next('.foldPL').removeClass('o').slideUp();
                }
                else {
                    $(this).find('i.fa').removeClass('fa-chevron-right').addClass('fa-chevron-down');
                    $(this).next('.foldPL').addClass('o').slideDown();
                }
            });
        });

