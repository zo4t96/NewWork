            //第一個參數要帶狀態物件，若點選的連結沒有參數指定就可以給null
            //反過來說，有參數指定的連結最好額外再寫一個ajax判斷式比較好
            history.pushState({ ajax: true, scrollY: null }, null, link);
            $(window).scrollTop(0);

            $.ajax({
                beforeSend:function() {
                    $(".mainbox").html(
                        `<div class="loading">
                        <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </div>`);
                },
                url: link,
                data: history.state,
                type: "post",
                success: function (data) {
                    $(".mainbox").html(data);
                    $(window).scrollTop(0);
                }
            })
        });

        //每當點選瀏覽器的上一頁下一頁便會發動此事件
        //location.pathname為動作完成後所得到的該頁url
        window.addEventListener('popstate', function () {
            history.state.ajax = true;
            history.replaceState(history.state, null);
            let y = history.state.scrollY;
            $.ajax({
                beforeSend:function() {
                    $(".mainbox").html(
                        `<div class="loading">
                        <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </div>`);
                },
                url: location.pathname,
                data: history.state,
                type: "post",
                success: function (data) {
                    $(".mainbox").html(data);
                    $(window).scrollTop(y);
                }
            })
            console.log(history.state);
        })

        //測試紀錄：history.state雖然可以直接賦值，但一旦切頁就會消失
        //若要使該頁的history.state不管怎麼切頁都可以確實保存下去，一定得使用replaceState方法才行
        //可以先利用history.state.xxx的方式賦予新定義的值，再用history.replaceState(history.state,null)的方式更新

        //但!!是!!!該方法不能給值為null的history.state!
        //最少最少得先建立一個{}空物件給它才能使用上述方式賦值，WTF
        if (history.state == null) {
            history.replaceState({ ajax: true, scrollY: 0 }, null);
        }
        $(window).scroll(function () {
            history.state.scrollY = window.scrollY;
            history.replaceState(history.state, null);
        })

    </script>
    @RenderSection("scripts", required: false)
    <!-- Optional JavaScript -->
</body>
