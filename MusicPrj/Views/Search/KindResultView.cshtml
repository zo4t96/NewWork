@model List<MainWork.tAlbum>

<style>
    .albumPanel {
        display: flex;
        flex-wrap: wrap;
        min-width: 600px;
        position: relative;
        padding: 20px;
    }

    .albumBlock {
        display: block;
        width: 15vw;
        height: 22vw;
        min-width: 200px;
        min-height: 293px;
        text-align: center;
        background-color: #292929;
        border-radius: 10px;
        margin: 10px;
        padding: 20px;
        cursor: pointer;
        transition: 0.4s;
        opacity: 0;
    }

    .animation {
        opacity: 1;
    }

    .albumBlock:hover {
        background-color: #353535;
        text-decoration: none;
    }

    .albumCover {
        position: relative;
        display: inline-block;
        width: 12vw;
        height: 12vw;
        min-width: 160px;
        min-height: 160px;
        border-radius: 10px;
        /*測試用圖片*/
        /*background-image: url("/Images/4.jpg");*/
        background-size: cover;
    }

    .albumContent {
        position: relative;
        width: 100%;
        min-width: 160px;
        overflow: hidden;
        text-align: left;
        margin: 5px 0px;
    }

    .albumTitle {
        display: block;
        min-width: 160px;
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 8px;
        /*使多出的字元變...，下面三個屬性都要設才有效果*/
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

    .albumDescripion {
        display: block;
        min-width: 160px;
        font-size: 16px;
        font-weight: 600;
        color: #808080;
        margin-bottom: 5px;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

    .noResult {
        position: relative;
        text-align: center;
        top: 40%;
        margin: auto;
    }
    /*折扣文字*/
    .discount {
        position: relative;
        font-size: 12px;
        font-weight: 600;
        color: #dc0000;
    }
</style>

@{string name = ViewBag.kindName as string; }
@if (Model.FirstOrDefault() == null)
{
    <div class="noResult">
        <div class="h3">查無資料</div>
        <p>該曲風可能為近期新增內容，目前還沒有相關音樂喔！</p>
    </div>
}
else
{
    <div class="h3 mx-5 mt-4 font-weight-bold searchTitle">曲風名稱</div>
}
<div class="albumPanel">
    @foreach (var item in Model)
    {
    <a class="albumBlock" href="@Url.Action("AlbumDetail","Album")?amid=@item.fAlbumID" data-album="@item.fAlbumID" data-title="@item.fAlbumName" title="@item.fAlbumName">
        <img src="~/CoverFiles/@item.fCoverPath" class="albumCover" />
        @* 這邊的封面連結記得到時候要改成連接圖片路徑 *@
        <div class="albumContent">
            <span class="albumTitle">@item.fAlbumName</span>
            <span class="albumDescripion">@item.fMaker</span>
            @if (item.tAlbumType.fTypeName != "不指定")
            {
                <span class="albumDescripion">@item.tAlbumType.fTypeName</span>
            }
            <span class="albumDescripion">@item.fKinds.Replace(",", "、")</span>
            @if (item.fActivityID != null)
            {
                <div class="discount">@((1 - item.fDiscount) * 100)% off!</div>
            }
        </div>
    </a>
    }
</div>
<script>
    setTimeout(function () {
        $(".albumBlock").addClass("animation");
    }, 200)

    $(".albumBlock").click(function (e) {
        e.preventDefault();
        let amid = $(this).data("album");
        let url = this.href;
        let stateObj = { amid: amid, ajax: true };
        history.pushState(stateObj, null, url);
        $.ajax({
            url: url,
            data: history.state,
            type: "post",
            beforeSend: function () {
                $(".mainbox").html(
                    `<div class="loading">
                    <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                    <span class="sr-only">Loading...</span>
                </div>`);
            },
            success: function (data) {
                $(".mainbox").html(data);
            },
            complete: function () {
                $(window).scrollTop(0);
            }
        })

        let title = $(this).data("title");
        document.title = title;
    });
    $(".searchTitle").text(history.state.kindName);
</script>
