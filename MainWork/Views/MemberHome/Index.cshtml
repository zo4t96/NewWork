@model MainWork.tMember
@using MainWork.Models

@{
    if (ViewBag.ajax != null)
    {
        @(Layout = null);
    }
    ViewBag.Title = "Index";
    tMember member = Session[CDictionary.SK_CURRENT_LOGINED_USER] as tMember;

}

<style>
    .memberPanel {
        float:left;
        background-color: #D2E9FF;
        border-radius: 15px;
        width: 80%;
        margin: 30px;
        padding: 30px 0;
        text-align:center;
        font-size:20px;
    }

    .memberInfo,
    .changePwd {
        background-color: darkseagreen;
        margin:0 20px;
    }
    .member > p {
        color: #8E8E8E;
        font-size: 80%;
    }

    .member > img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
    }
</style>

<div class="headtitle h1">會員管理</div>
<div class="memberPanel row">
    <div class="memberInfo col-4">
        <div class="member">
            <img src="~/Images/@Model.fPicPath"  />
            <p></p>
        </div>

        <label>會員帳號 : </label>
        @Model.fAccount
        <p></p>

        <label>信箱 : </label>
        @Model.fEmail
        <p></p>

        <label>暱稱 : </label>
        @Model.fNickName
        <p></p>

        <label>剩餘積分 : </label>
        @Convert.ToInt32(Model.fMoney)
        <p></p>

        <label>會員類別 : </label>
        @if (@Model.fPrivilege == 0)
        {
            <span>一般會員</span>
        }
        else if (@Model.fPrivilege == 1)
        {
            <span>包月會員</span>
        }
        else
        {
            <span>管理員</span>
        }
        <p></p>

        <a class="btn btn-primary" href="~/CMemberHome/Edit?fAccount=@Model.fAccount">修改資料</a>
    </div>
    <div class="changePwd col-4">
        123
    </div>
</div>

