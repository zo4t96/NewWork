@model IEnumerable<MainWork.ViewModels.CSearchResult>
<style>
    .albumPanel {
        display: flex;
        flex-wrap: wrap;
        position: relative;
        padding: 20px;
    }

    .albumBlock {
        display: block;
        width: 15vw;
        height: 22vw;
        min-width: 200px;
        min-height: 293px;
        text-align: center;
        background-color: #292929;
        border-radius: 10px;
        margin: 10px;
        padding: 20px;
        cursor: pointer;

        transition: 0.4s;
        opacity: 0;
    }

    .animation {
        opacity: 1;
    }
        .albumBlock:hover {
            background-color: #353535;
            text-decoration: none;
        }

    .albumCover {
        position: relative;
        display: inline-block;
        width: 12vw;
        height: 12vw;
        min-width: 160px;
        min-height: 160px;
        /*測試用圖片*/
        background-image: url("/Images/4.jpg");
        background-size: cover;
    }

    .albumContent {
        position: relative;
        width: 12vw;
        min-width: 160px;
        overflow: hidden;
        text-align: left;
        margin: 5px 0px;
    }

    .albumTitle {
        display: block;
        width: 12vw;
        min-width: 160px;
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 8px;
        /*使多出的字元變...，下面三個屬性都要設才有效果*/
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

    .albumDescripion {
        display: inline-block;
        width: 12vw;
        min-width: 160px;
        font-size: 12px;
        font-weight: 600;
        color: #808080;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

        /*查無資料*/
    .noResult {
        position:relative;
        text-align: center;
        top: 40%;
        margin:auto;
    }
    .noResult h3 {
        font-family: "微軟正黑體"
    }
</style>

@if (Model.FirstOrDefault() == null)
{
    <div class="noResult">
        <h3>查無資料</h3>
        <p>請確認關鍵字輸入是否正確，或者使用進階搜尋時降低條件數量</p>
    </div>
}

<body>
    <div class="albumPanel">
        <a class="albumBlock" href="">
            <div class="albumCover"></div>
            <div class="albumContent">
                <span class="albumTitle">音樂名稱</span>
                <span class="albumDescripion">專輯名稱</span>
                <span class="albumDescripion">歌手</span>
                <span class="albumDescripion">作曲者</span>
            </div>
        </a>
        @foreach (var item in Model)
        {
            <a class="albumBlock" href="@Url.Action("AlbumDetail","Album")" data-album="@item.album.fAlbumID">
                @* 這邊的封面連結記得到時候要改成連接圖片路徑 *@
                <div class="albumCover"></div>
                <div class="albumContent">
                    <span class="albumTitle">@item.product.fProductName</span>
                    <span class="albumDescripion">@item.album.fAlbumName</span>
                    @if (item.product.fArtist != null)
                    {
                        <span class="albumDescripion">歌手:@item.product.fArtist</span>
                    }
                    <span class="albumDescripion">作曲:@item.product.fComposer</span>
                </div>
            </a>
        }
    </div>
    <script>
        setTimeout(function () {
            $(".albumBlock").addClass("animation");
        }, 100)

        $(".albumBlock").click(function (e) {
            e.preventDefault();
            let amid = $(this).data("album");
            let url = `${$(this).attr("href")}?amid=${amid}`;
            let stateObj = { amid: amid, ajax: true };
            $.post(url, stateObj, function (data) {
                $(".mainbox").html(data);
            })
            history.pushState(stateObj, null, url);
            $(window).scrollTop(0);
        });

        $(".noResult").find("h3").text(`查無 ${history.state.keyword} 的資料`);
    </script>
</body>
