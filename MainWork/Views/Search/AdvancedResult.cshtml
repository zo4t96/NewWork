@{  
    if (ViewBag.ajax != null)
    {
        @(Layout = null);
    }
}
<script>
    var y;
    if (y == null) {
        y = 0;
    }
    $.ajax({
        beforeSend:function() {
            $(".mainbox").html(
                `<div class="loading">
                <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                <span class="sr-only">Loading...</span>
            </div>`);
        },
        url: '@Url.Action("AdvancedResultView", "Search")',
        data: history.state,
        type: "post",
        success: function (data) {
            $(".mainbox").html(data);
        },
        complete: function () {
            $(window).scrollTop(y);
        }
    })
</script>
