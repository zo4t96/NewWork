@model IEnumerable<MainWork.tAlbumKind>
@{
    //如果是ajax讀取出這頁，取消讀取框架只讀內容
    if (ViewBag.ajax != null)
    {
        @(Layout = null);
    }
}
<style>

    .kindPage {
        /* 方塊浮動(不用float)，自動換行，*/
        display: flex;
        flex-wrap: wrap;
        position: relative;
        background-color: #191919;
        padding: 10px;
        font-family: "微軟正黑體";
        color: white;
        font-weight: 700;
        font-size: 24px;
    }
    .outline {
        width: 13.5vw;
        height: 13.5vw;
        min-width: 160px;
        min-height: 160px;
    }
    .kindBlock {
        /* 寬高單位同為vw或vx可達成等比例縮放的方形效果 */
        width: 12.5vw;
        height: 12.5vw;
        min-width: 150px;
        min-height: 150px;
        border-radius: 10px;
        margin: 8px;
        padding: 10px;
        /*background-color: #6bc477;*/
        /*輕微漸層效果，意外的很帶感*/
        background-image: linear-gradient(to bottom,#16161660 15%,#6bc477);
        overflow: hidden;
        cursor: pointer;
        transition: 0.2s;
    }

        .kindBlock:hover {
            width: 13.5vw;
            height: 13.5vw;
            min-width: 165px;
            min-height: 165px;
            margin: 2px;
        }

    .photo {
        position: relative;
        width: 70%;
        height: 70%;
        bottom: -25%;
        right: -50%;
        /* 設置音樂封面作為背景圖片，使圖片填滿div，添加陰影，斜向旋轉，輕微透明效果 */
        background-image: url("#");
        background-size: cover;
        box-shadow: 0px 1px 2px 1px #0000004b;
        transform: rotate(25deg);
        transition: 0.4s;
        opacity: 0;
    }
    .fadein{
        opacity:0.8;
    }
</style>
<title>BasicSerch</title>
<body>
    <div class="kindPage">
        @foreach (var item in Model)
        {
            string id = item.KindID.ToString();
            <a class="outline">
                <div class="kindBlock" data-kind="@id" data-color="@item.fColor" data-image="@item.fPhotoPath">
                    <span class="kindName">@item.KindName</span>
                    <div class="photo"></div>
                </div>
            </a>
        }
    </div>
    <script>
        setTimeout(function () {
            $(".photo").addClass("fadein");
        }, 300)

        //讓類別窗格不同色的程式碼，暫時是寫死的(20種顏色)
        $(".kindBlock").each(function () {
            $(this).css("background-color", $(this).data("color"));
            $(this).css("background-image", `linear-gradient(to bottom,#16161660 15%,${$(this).data("color")})`);
            $(this).find(".photo").css("background-image", `url(/Images/${$(this).data("image")})`)
            $(this).click(function(){
                let kindId = $(this).data("kind");
                let url = `@Url.Action("KindResult", "Search")?kindId=${kindId}`
                let stateObj = { kindId: kindId, ajax: true };
                $.post(url, stateObj, function (data) {
                    $(".mainbox").html(data);
                });
                history.pushState(stateObj,null,url);
            })
        })  
    </script>
</body>
