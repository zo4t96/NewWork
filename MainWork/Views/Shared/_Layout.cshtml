@using MainWork.Models
@using prjSpotifyProject.Models
@{ 
    //因為直接把會員物件整份傳過來，所以在此先轉型
    var sk = Session[CDictionary.SK_CURRENT_LOGINED_USER] as tMember;
}
<!doctype html>
<html lang="en">
<head>
    <title>SpiderFly</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">*@
    @* ↓主要用來讀取一些特殊icon *@
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    @* 測試兩版本jquery的共用性，如出意外先刪除下面那行並解除上面那行註解 *@
    @* 目前已知差別，使用let時下面那個不能重複宣告而上面可以 *@
    @*<script src="https://code.jquery.com/jquery-1.12.4.js"></script>*@
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    
    @* 聖開的 *@
    @RenderSection("styles", required: false)

    <!--原始style-->
    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: "微軟正黑體";
            color: white;
        }

        .header {
            position: fixed;
            width: 100%;
            height: 70px;
            background-color: black;
            z-index: 100;
        }

        .header-logo {
            position: relative;
            top: 10px;
            left: 10px;
            width: 180px;
            padding-left: 40px;
            font-size: 25px;
            background: black;
        }

        .header-logo-text {
            color: white;
        }

        .header-button {
            position: absolute;
            top: 15px;
            right: 20px;
        }

        /*登入頭像*/
        .header-Upperrightcorner-img {
            position: absolute;
            display: inline-block;
            margin-right: 5px;
            width: 45px;
            height: 45px;
            top: -5px;
            right: 120px;
            border-radius: 50%;
            background-size: 100%;
            background-repeat: no-repeat;
            cursor: pointer;
        }

        #content {
            display: flex;
            position: relative;
            left: 0; /*將子元素的定位到具體的參照對象*/
            width: 100%;
            background-color: #191919;
        }

        .sidebox {
            position: fixed;
            width: 200px;
            height: 100vh;
            background-color: #060606;
            color: white;
            margin-top: 70px;
        }

        .mainbox {
            width: 100%;
            min-height: calc(100vh - 200px);
            position: relative;
            margin-top: 70px;
            margin-bottom: 110px;
            margin-left: 200px;
        }

        #footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            color: white;
            background-color: #252525;
            box-shadow: 0 0 2em black;
            z-index: 1000
        }

        /*額外更新左邊選單*/
        li {
            list-style-type: none;
            margin: 5px;
        }

        a {
            /*要加上!important才能強行刪除底線*/
            text-decoration: none !important;
        }

        .menuItem {
            width: 190px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.4s;
        }
            /*當滑鼠滑到該元素上，底下的兩個子元素會有變化的寫法*/
            /*透過jQuery改變css會導致此項失效(jQuery的語法會將改變的內容放在標籤內，優先層級較高)
        /*一樣使用!important可以解決*/
            .menuItem:hover > span,
            .menuItem:hover > .fa {
                color: white !important;
            }

        .menuItemSelected {
            background-color: #3a3a3a;
        }

        .menuItem .fa {
            font-size: 20px;
            margin: 10px 20px;
            color: #656565;
            transition: 0.4s;
        }

        .menuItem span {
            display: inline-block;
            position: relative;
            bottom: 3px;
            color: #656565;
            transition: 0.4s;
        }

        /*全介面的scrollBar*/
        body::-webkit-scrollbar {
            width: 15px;
        }

        body::-webkit-scrollbar-track {
            background-color: #191919;
        }

        body::-webkit-scrollbar-thumb {
            border-radius: 4px;
            background-color: #3a3a3a;
        }
    </style>

    <!--搜尋條style-->
    <style>
        .searchBar {
            top: -35px;
            position: relative;
            left: 185px;
            margin: 15px;
            width: 25%;
            min-width: 200px;
        }
        /*不用id變不了bootstrap的文字顏色*/
        /*#advancedBtn {
            color: whitesmoke;
        }*/

        .advancedPanel {
            display: none;
            width: 530px;
            border-radius: 10px;
            padding: 5px 20px 20px 20px;
            background-color: #040404;
            background-image: linear-gradient(#474747,#040404);
            opacity: 0;
            transition: 0.1s;
            box-shadow: 1px 1px 2px #818181;
        }

        .advancedItem {
            display: inline-flex;
            flex-wrap: wrap;
            width: 140px;
            margin: 10px;
        }

        .ui-menu-item-wrapper,
        option {
            color: black;
        }

        .advancedSelect {
            margin: 10px;
        }

        .selectedItem,
        .selectableItem,
        .itemAdd {
            display: inline-block;
            border-radius: 5px;
            border: 1px solid #212121;
            padding: 5px;
            margin: 2px 1px;
            color: white;
            font-weight: 600;
        }

        .selectedItem {
            display: none;
        }

        .itemAdd {
            padding: 5px 10px;
        }

        .selectableItem,
        .selectedItem,
        .itemAdd {
            cursor: pointer;
        }

            .itemAdd:hover {
                background-color: rgba(6, 78, 137, 0.90)
            }

        .selectableItemPanel {
            display: none;
            position: absolute;
            width: 90%;
            min-width: 200px;
            border-radius: 5px;
            background-color: rgba(0, 0, 0, 0.8);
            transition: 0.1s;
            box-shadow: 1px 1px 2px #525252;
        }

        .adSwitch {
            opacity: 1;
            display: block;
        }

        .searchPanel {
            width: 100%;
            text-align: right;
        }

        .adSearchBtn {
            background-image: linear-gradient(to bottom right, #22b7e8,#1347d9);
            margin-right: 10px;
        }
    </style>

    <!--播放器style-->
    <style>

        #playerPanel {
            position: relative;
            width: 100%;
            min-width: 1200px;
            height: 110px;
        }

        #titlePanel {
            position: absolute;
            left: 110px;
            width: 14%;
            height: 80px;
            margin: 10px;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }

        img.playerCover {
            width: 100px;
            height: 100px;
            margin: 3px;
        }

        #playerfigure {
            position: absolute;
            width: 100px;
            margin: 2px;
            color: white;
        }

        .description {
            font-size: 14px;
            font-weight: 600;
        }

        .descriptionSub {
            color: rgb(199, 194, 194);
            font-size: 10px;
            white-space: nowrap;
        }

            .descriptionSub.singer {
                font-style: italic;
            }

        #btnPanel {
            position: relative;
            top: 3px;
            width: 400px;
            margin: auto;
            text-align: center;
        }

        #progressPanel {
            position: relative;
            width: 55%;
            margin: 5px auto;
            text-align: center;
        }

        #volumePanel {
            position: absolute;
            right: 0px;
            top: 40px;
            width: 160px;
        }

        .sound {
            width: 30px;
            height: 22px;
            filter: invert();
        }

        #volumeBar {
            -webkit-appearance: none;
            border-radius: 50px;
            width: 100px;
            height: 5px;
            outline: none;
        }

            #volumeBar:hover,
            #progress:hover,
            .sound:hover {
                cursor: pointer;
            }

        #progress {
            -webkit-appearance: none;
            border-radius: 50px;
            top: 50px;
            width: 80%;
            height: 5px;
            /*下面這個不關掉的話選取進度條時會出現藍框*/
            outline: none;
            margin: auto;
            transition: 0.2s;
        }

        input::-webkit-slider-thumb {
            -webkit-appearance: none;
            position: relative;
            width: 11px;
            height: 11px;
            background-color: white;
            border-radius: 50%;
            transition: 0.2s;
        }

        input::-webkit-slider-runnable-track {
            transition: 0.5s;
        }

        input::-webkit-slider-thumb:hover {
            width: 15px;
            height: 15px;
        }

        .btn:hover {
            background: skyblue;
            cursor: pointer;
        }

        .btn:active {
            background: silver;
        }

        .btn img {
            width: 30px;
            height: 22.5px;
            margin: 10px;
            /*下面是色彩反轉的濾鏡效果(把黑圖片變白)*/
            filter: invert();
        }
    </style>

    <!--會員專輯頁style-->
    <style>
        .albumname {
            width: 200px;
            height: 45px;
            overflow: hidden; /*超出範圍的部分隱藏*/
            text-overflow: ellipsis; /*出現省略號*/
            white-space: nowrap;
        }

        .productitem {
            float: left;
            color: white;
            margin-left: 10px;
            margin-bottom: 0.5%;
            font-family: 微軟正黑體;
            background-color: #444444;
            cursor: pointer;
            border-radius: 10px
        }

            .productitem:hover {
                background-color: dimgray;
            }

        .productitemhy:link {
            color: white;
            text-decoration: none;
        }

        .productitemhy:visited {
            color: white;
        }

        .headtitle {
            color: white;
            margin-left: 20px;
            font-family: 微軟正黑體;
        }
    </style>

    <!--modal(彈出)版面style-->
    <style>
        #modal {
            position: fixed;
            width: 100vw;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.7);
            display: none;
            z-index: 999;
            transition: 0.6s;
            opacity: 0;
        }

            #modal.fadein {
                opacity: 1;
            }

        #modalContent {
            position: relative;
            top: 10%;
            width: 40%;
            padding: 20px;
            background-color: #191919;
            border-radius: 20px;
            margin: auto;
            transition: 0.6s;
            opacity: 0;
        }

            #modalContent.fadein {
                top: 20%;
                opacity: 1;
            }
    </style>

    <!--通用介面的loading符號-->
    <style>
        .loading {
            position: relative;
            text-align: center;
            top: 50%;
        }
    </style>

    <!--播放清單介面-->
    <style>
        .playListPanel {
            position: fixed;
            display: flex;
            height: calc(100vh - 110px);
            width: 400px;
            background-color: #2b2b2b;
            right: -415px;
            z-index: 500;
            transition: 0.4s;
            box-shadow: -5px -30px 2em 5px #151515;
            border-radius: 5px 0 0 5px;
        }

        .open {
            right: 0px;
        }

        .playListSwitch.s1 {
            position: fixed;
            display: inline-block;
            width: 30px;
            /*高度為減掉頁首及播放器*/
            height: calc(100% - 180px);
            right: 0px;
            background-color: transparent;
            top: 70px;
            font-size: 24px;
            text-align: center;
            padding: 18% 5px;
            cursor: pointer;
            transition: 0.3s;
            z-index: 499;
            border-radius: 5px 0 0 5px;
        }

        .playList {
            float: left;
            flex-wrap: wrap;
            position: relative;
            height: 100%;
            width: 100%;
            overflow: auto;
        }

        .playListSwitch.s2 {
            position: relative;
            height: 100%;
            width: 24px;
            background-color: transparent;
            padding: 90% 10px;
            cursor: pointer;
            transition: 0.3s;
            z-index: 499;
        }

        .playListSwitch:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .playListItem {
            display: flex;
            width: 95%;
            margin: 5px 0px;
            padding: 5px 5px 6px 5px;
            cursor: pointer;
        }

            .playListItem:hover {
                background-color: #666666;
            }

        .plSymbol {
            position: relative;
            display: inline-block;
            height: 40px;
            width: 40px;
            font-size: 21px;
            background-color: #cecece;
            padding: 3.5px 7.5px 4.5px 6px;
            border-radius: 50%;
            margin: 4px 10px 0 5px;
        }

            .plSymbol i {
                color: #258ade;
                transform: rotate(5deg) scaleY(1.1) skewX(10deg);
            }

        .plDescription {
            display: inline-block;
            width: 90%;
        }

        .hr {
            border-bottom: 1px solid #cecece;
            margin: 2px;
        }

        .mTitle {
            font-size: 16px;
            font-weight: 600;
            width: 95%;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }

        .mDetail {
            font-size: 12px;
            font-style: italic;
            width: 95%;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }

        .playingItem {
            background-color: #666666;
        }

        .playingSymbol i {
            color: #33b630;
        }
        /*清單的scroll條棒*/
        .playList::-webkit-scrollbar {
            width: 10px;
        }

        .playList::-webkit-scrollbar-thumb {
            border-radius: 4px;
            background-color: #4a4a4a;
        }
    </style>
</head>
<body>
    @* 播放清單相關畫面 *@
    <div class="playListSwitch s1">
        <i class="fa fa-caret-left"></i>
    </div>

    <div class="playListPanel">
        <div class="playListSwitch s2">
            <i class="fa fa-caret-right"></i>
        </div>
        <div class="playList">
            <div class="playListPartialView">
                @Html.Action("_PlayLists", "Album")
            </div>
        </div>
    </div>

    @* 測試modal *@
    <div id="modal">
        <div id="modalContent">
            @* 這裡的內容隨按鍵改變而讀取 *@
        </div>
    </div>

    <div class="header">
        <div class="header-logo">
            <a href="#"><img @*src=""*@ alt=""></a>
            <button class="navbar-toggler header-logo-text" type="button">LOGO</button>
        </div>

        @* 搜尋條--套用bootstrap(input-group) *@
        <div class="searchBar">
            @* 基本搜尋條(結合進階搜尋鍵) *@
            <div class="input-group">
                <input class="searchtxt form-control" type="text" placeholder="搜尋歌曲..." name="basicSearch">
                <div class="input-group-append">
                    <div class="btn btn-outline-secondary" id="advancedBtn">進階搜尋</div>
                    <div class="btn btn-outline-secondary searchBtn">
                        <i class="fa fa-search"></i>
                    </div>
                </div>
            </div>

            @* 進階搜尋面板 *@
            <div class="advancedPanel">
                <div class="advancedItemGroup">
                    <div class="advancedItem">
                        歌曲名稱
                        <input type="text" class="advancedtxt form-control" id="adSong" />
                    </div>
                    <div class="advancedItem">
                        專輯名稱
                        <input type="text" class="advancedtxt form-control" id="adAlbum" />
                    </div>
                    <div class="advancedItem">
                        歌手
                        <input type="text" class="advancedtxt form-control" id="adSinger" />
                    </div>
                    <div class="advancedItem">
                        團體名稱
                        <input type="text" class="advancedtxt form-control" id="adGroup" />
                    </div>
                    <div class="advancedItem">
                        作曲者
                        <input type="text" class="advancedtxt form-control" id="adComposer" />
                    </div>
                    <div class="advancedItem">
                        發行類別
                        <select class="advancedtxt form-control" id="adType">
                            @* 網頁初始化時會在這裡更新搜尋的類別 *@
                        </select>
                    </div>
                </div>

                @* 這邊放自選類別 *@
                <div class="typeSelectGroup">
                    @* 選擇想要的類別 *@
                    <div class="typeSelect advancedSelect">
                        偏好的曲風
                        <div class="advancedBlock">
                            @* 網頁初始化時會在這裡更新曲風與增加鈕 *@
                        </div>

                        @* 點選+號後會出現的type選擇表，位置應在+號正下方 *@
                        <div class="selectableItemPanel">
                            @* 網頁初始化時會在這裡更新曲風 *@
                        </div>
                    </div>

                    @* 進階搜尋鍵 *@
                    <div class="searchPanel">
                        <button class="btn btn-primary adSearchBtn">搜尋</button>
                    </div>
                </div>
            </div>
        </div>

        @* 登入註冊鍵 *@
        <div class="header-button">
            @{
                //登入後會顯示的會員頭像，待修正

                if (sk == null)
                {
                    <div id="logonInterface" class="btn btn-outline-secondary">註冊</div>
                    <div id="loginInterface" class="btn btn-outline-secondary">登入</div>
                }
                else
                {
                    //會員頭像兼會員中心預定
                    <img src="~/Images/4.jpg" class="header-Upperrightcorner-img" />

                    @*@Html.ActionLink("個人短訊息", "MessageBox", "Message", null, new { @class = "side-li-home-img" })*@
                    <a href="@Url.Action("MessageBox","Message")">
                        <div class="btn btn-outline-secondary">訊息</div>
                    </a>
                    <a href="@Url.Action("Logout","MemberLogin")">
                        <div id="logoutInterface" class="btn btn-outline-secondary">登出</div>
                    </a>
                }
            }
        </div>
    </div>

    <div id="content">
        <!--邊條選項欄-->
        <div class="sidebox">
            <ul>
                <li>
                    <a href="@Url.Action("Main","Homepage")">
                        <div class="menuItem">
                            <i class="fa fa-home"></i>
                            <span>首頁</span>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Kinds","Search")">
                        <div class="menuItem">
                            <i class="fa fa-search"></i>
                            <span>音樂分類</span>
                        </div>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("TwoPlayer","Player")">
                        <div class="menuItem">
                            <i class="fa fa-headphones"></i>
                            <span>雙重播放器測試</span>
                        </div>
                    </a>
                </li>

                @if (sk != null)
                {
                    <li>
                        <a href="@Url.Action("MyAlbumList","Album")/?account=@sk.fAccount">
                            <div class="menuItem">
                                <i class="fa fa-headphones"></i>
                                <span>我的發行(測試用)</span>
                            </div>
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("MyMusic","Album")">
                            <div class="menuItem">
                                <i class="fa fa-music"></i>
                                <span>我的音樂庫</span>
                            </div>
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("ShoppingCart","tShoppingCart")">
                            <div class="menuItem">
                                <i class="fa fa-shopping-cart"></i>
                                <span>我的購物車</span>
                            </div>
                        </a>
                    </li>

                    if (sk.fAccount == "aaa")
                    {
                        <li>
                            <a class="manage" href="@Url.Action("Index","Admin")" target="_blank">
                                <div class="menuItem" id="admininterface">
                                    <i class="fa fa-th-list"></i>
                                    <span>後臺管理介面</span>
                                </div>
                            </a>
                        </li>
                    }
                }

            </ul>
        </div>


        <!--內容主體-->
        <div class="mainbox">
            @RenderBody()
        </div>
    </div>

    <!--播放器-->
    <div id="footer">
        <div id="playerPanel">
            <!-- 封面與歌名div -->
            <figure id="playerfigure">
                <img id="playercover" src="#" class="playerCover">
            </figure>
            <div id="titlePanel">
                <span class="album description">這裡放專輯</span><br />
                <span id="Descriptiontwo" class="music descriptionSub">這裡放歌名</span><br />
                <span id="singer" class="singer descriptionSub">這裡放歌手</span>
            </div>

            <!-- 基本按鍵div -->
            <div id="btnPanel">
                <div id="random" class="btn"><img src="/PlayerImg/random.png"></div>
                <div id="prev" class="btn"><img src="/PlayerImg/prev.png"></div>
                <div id="play" class="btn"><img src="/PlayerImg/play.png"></div>
                <div id="pause" class="btn"><img src="/PlayerImg/pause.png"></div>
                <div id="next" class="btn"><img src="/PlayerImg/next.png"></div>
                <div id="replay" class="btn"><img src="/PlayerImg/replay.png"></div>
            </div>

            <!-- 進度條div -->
            <div id="progressPanel">
                <span id="nowTime">00:00</span>
                <input id="progress" class="demoSlider" type="range" min="0" max="100" step="0.01" value="0">
                <span id="totalTime">00:00</span>
            </div>

            <!-- 音量條div -->
            <div id="volumePanel">
                <img src="/PlayerImg/sound.png" data-sound="volumeImg" id="volumeImg" class="sound">
                <img src="/PlayerImg/mute.png" data-sound="muteImg" id="muteImg" class="sound">
                <input id="volumeBar" type="range" min="0" max="1" step="0.01" value="0.5">
            </div>

            <!--播放器本體-->
            <audio id="mainPlayer" src="~/Music/紅魔 「Un-demystified Fantasy」.mp3"></audio>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
