    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="@Url.Content("~/Scripts/dragableplugin.js")" type="text/javascript"></script>

    <script>

        /////////////////
        ///主播放器相關///
        /////////////////

        //新增
        var m_soid;
        var m_singer;
        var m_song;
        var m_songcover;
        var playerAjaxExecu = false;
        var m_playmode = 1;
        //****
        var oplaying = false;
        var dplaying = false;
        var fileName;

        var player;//主播放器
        var playing;//是否正在播放中
        var totalTime;//本次歌曲的秒數總長度
        var nowVolume;//當前音量

        player = document.getElementById("mainPlayer");
        playing = false;
        $("#pause").css("display", "none");
        $("#muteImg").css("display", "none");
        player.volume = 0.5;
        $("#volumeBar").css({ "background-image": "-webkit-linear-gradient(left , #5599FF 50%,#fff 0px)" });

        nowVolume = player.volume;

        //初始化播放器內音樂的總長度，並將值傳給進度條
        player.addEventListener("durationchange", function () {
            totalTime = parseInt(player.duration);
            $("#progress").prop("max", totalTime);

            let m1 = parseInt(totalTime / 600);
            let m2 = parseInt(totalTime / 60);
            let s1 = parseInt(totalTime % 60 / 10);
            let s2 = parseInt(totalTime % 60 % 10);
            $("#totalTime").text(`${m1}${m2}:${s1}${s2}`);
        });

        //播放器的timer
            player.addEventListener("timeupdate", function () {
                $("#progress").prop("value", player.currentTime);

                let now = player.currentTime;
                let m1 = parseInt(now / 600);
                let m2 = parseInt(now / 60);
                let s1 = parseInt(now % 60 / 10);
                let s2 = parseInt(now % 60 % 10);
                $("#nowTime").text(`${m1}${m2}:${s1}${s2}`);

                //進度條的變化
                let persent = now / totalTime * 100;
                let p = parseInt($("#progress").css("width")) / 100;
                let f = persent * p;
                $("#progress").css({ "background-image": `-webkit-linear-gradient(left , #5599FF ${f}px,#fff 0px)` });

                if (player.currentTime > $("#progress").attr("max")) {
                player.pause();
                $(".dplayPL").css("display", "inline");
                $(".dpausePL").css("display", "none")
                $("#play").css("display", "inline-block");  //新增,為與舊撥放器同步
                $("#pause").css("display", "none")          //新增,為與舊撥放器同步
                playing = false;                            //新增,為與舊撥放器同步
                let plink;
                    if (playerAjaxExecu == false && m_playmode >0) {
                        playerAjaxExecu = true;
                        nextPlayAjaxAction(0);
                    }
                    player.currentTime = 0;
                    plink = "@Url.Action("_PlayLists","Album")";
                    if (m_playmode != 0) {
                        setTimeout(function () {
                            playing = true;
                            $("#play").css("display", "none");
                            $("#pause").css("display", "inline-block");
                            player.play();
                            playerAjaxExecu = false;
                            $.post(plink, { ajax: true }, function (data) {
                            $(".playListPartialView").html(data);
                        })
                        }, 100);
                    }
                }
            });

        //讀取撥放清單下一首單曲資料
        function nextPlayAjaxAction(para) {
            let temp;
            if (para == 1) {
                temp = m_playmode;
                m_playmode = 4;
            }
            $.ajax({
                url: "@Url.Action("nextPlayLists","Album")?amid=" + m_soid + "&playmode=" + m_playmode,
                //   data: { term: request.term.trim() },
                data: {},
                type: "POST",
                async: true,
                cache: false,
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    if (result == '查無此') {
                        playerAjaxExecu = false;
                    }
                    console.log(result);
                    player.src = "@Url.Content("~/")MusicFiles/" + result.fFilePath;
                    m_songcover = "@Url.Content("~/")CoverFiles/" + result.fCoversource;
                    m_soid = result.fProductID;
                    m_singer = result.fComposer;
                    m_song = result.fProductName;
                    $("#Descriptiontwo").text(m_song);
                    $("#singer").text(m_singer);
                    $("#playercover").attr("src", m_songcover);
                    $(".album").text(result.fAlbumName);
                    if (m_playmode == 4) {
                        m_playmode = temp;
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    console.log("Error.");
                    playerAjaxExecu = false;
                    if (m_playmode == 4) {
                        m_playmode = temp;
                    }
                }
            });
        }

        $("#play").click(function () {
            player.play();//player-->demoaudio修改
            playing = true;
            $("#play").css("display", "none");
            $("#pause").css("display", "inline-block")

             //若有其他播放器則全部暫停
            $(".dpause").trigger("click");
        })
        //音樂暫停鍵
        $("#pause").click(function () {
            player.pause();//player-->demoaudio修改
            playing = false;
            $("#play").css("display", "inline-block");
            $("#pause").css("display", "none")
        })

         //音樂下一首
        $("#next").click(function () {
            player.currentTime = parseInt(player.duration)-1;
        })

        //連續撥方3模式切換
        $("#replay").click(function () {
            if (m_playmode == 0) {
                m_playmode = 1;
                $("#replay").children().attr("src", "../Content/replay.png");
                console.log("連續");
            } else if (m_playmode == 1) {
                $("#replay").children().attr("src", "../Content/replay_s.png");
                m_playmode = -1;
                console.log("單首連續");
            } else {
                $("#replay").children().attr("src", "../Content/replay_n.png");
                m_playmode = 0;
               console.log("播完停");
            }

        })

         //隨機撥放
        $("#random").click(function () {
            if (m_playmode != 2) {
                m_playmode = 2;
                $("#replay").children().attr("src", "../Content/replay_n.png");
                $("#random").children().attr("src", "../Content/random_on.png");
                console.log("隨機")
            }
            else {
                m_playmode = 1;
                $("#replay").children().attr("src", "../Content/replay.png");
                $("#random").children().attr("src", "../Content/random.png");
                console.log("取消隨機")
            }
         })

        //上一首
        $("#prev").click(function () {
            if (player.currentTime > 2) {
                player.currentTime = 0;
            } else {
                nextPlayAjaxAction(1);
                playerAjaxExecu = false;
            }
            setTimeout(function () {
            playing = true;
            $("#play").css("display", "none");
            $("#pause").css("display", "inline-block");
            player.play();
             playerAjaxExecu = false;
            }, 1000);
            let plink = "@Url.Action("_PlayLists","Album")";
            $.post(plink, { ajax: true }, function (data) {
            $(".playListDetail").html(data);
            })
        })

        //調整音量時能立即更動而不用放開滑鼠
        $("#volumeBar").on('input', function () {
            $(this).trigger("change");
        })
        //音量調節鍵
        $("#volumeBar").change(function () {
            player.volume = this.value;
            let v = this.value * 100;
            $("#volumeBar").css({ "background-image": `-webkit-linear-gradient(left , #5599FF ${v}%,#fff 0px)` });
            if (demoMusic.volume == 0) {
                $("#volumeImg").css("display", "none");
                $("#muteImg").css("display", "inline-block");
            }
            else {
                $("#volumeImg").css("display", "inline-block");
                $("#muteImg").css("display", "none");
            }
        });

        //靜音鍵
        $(".sound").click(function () {
            let data = $(this).data("sound");
            switch (data) {
                case "volumeImg":
                    nowVolume = demoMusic.volume;
                    player.volume = 0;
                    $("#volumeBar").prop("value", 0);
                    $("#volumeBar").css({ "background-image": `-webkit-linear-gradient(left , #5599FF ${0}%,#fff 0px)` });
                    $("#volumeImg").css("display", "none");
                    $("#muteImg").css("display", "inline-block");
                    break;

                case "muteImg":
                    player.volume = nowVolume;
                    $("#volumeBar").prop("value", nowVolume);
                    $("#volumeBar").css({ "background-image": `-webkit-linear-gradient(left , #5599FF ${nowVolume * 100}%,#fff 0px)` });
                    $("#volumeImg").css("display", "inline-block");
                    $("#muteImg").css("display", "none");
                    break;
            }
        });

        //選擇進度條後立刻發動值的change(否則會出現延遲，造成改值失敗)
        $("#progress").on('input', function () {
            player.pause();//player-->demoaudio修改
            $(this).trigger("change");
        })
        //音樂進度條改變
        $("#progress").change(function () {
            player.currentTime = this.value;//player-->demoaudio修改
        });
        //拖動進度條直到放開滑鼠才重新開始播放
        $("#progress").mouseup(function () {
            if (playing)
                player.play();//player-->demoaudio修改
        });

        /////////////////////
        ///AJAX切換頁面相關///
        /////////////////////

        //$(".mainbox").load(link);
        //更新老師上課說法
        //load可以讀取一個頁面中的部分位置如"controller/avtion #div1>img"這種寫法
        //意為讀取該網頁id為div1中的img
        //但是mvc本身有PartailView這個功能，因此應該用不到load

        //點連結將主容器切換到新頁面，這個的內容會根據連結的不同有所改變
        $("li > a").on("click", function (e) {
            //如果按的是後台選項直接跳新的後台視窗
            if ($(this).hasClass("manage")) {
                return;
            }

            e.preventDefault();
            let link = $(this).attr("href");
            //第一個參數要帶狀態物件，若點選的連結沒有參數指定就可以給null
            //反過來說，有參數指定的連結最好額外再寫一個ajax判斷式比較好
            history.pushState({ ajax: true, scrollY: 0 }, null, link);

            $.ajax({
                beforeSend:function() {
                    $(".mainbox").html(
                        `<div class="loading">
                        <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </div>`);
                },
                url: link,
                data: history.state,
                type: "post",
                success: function (data) {
                    $(".mainbox").html(data);
                },
                complete: function () {
                    $(window).scrollTop(0);
                }
            })
        });

        //這裡宣告全域變數y，儲存各頁的卷軸位置(為了配合上下一頁的資料儲存)
        //由於音樂搜尋結果是由ajax非同步產生出的內容，每次產生會有不同長度的內容
        //同時由於非同步運作的特性，致使某些程式碼不一定每次會照著順序運行，也造成滾動卷軸更新位置時的不一致
        //為了避免卷軸在不可預期的時間點儲存到新的卷軸位置，因此在發動ajax前先行儲存到全域變數
        //等到ajax全部發動完畢後，才在complete的時間點將位置回推到這個事先儲存好的位置
        var y;

        //每當點選瀏覽器的上一頁下一頁便會發動此事件
        //location.pathname為動作完成後所得到的該頁url
        window.addEventListener('popstate', function () {
            //history.replaceState(history.state, null);
            y = history.state.scrollY;
            $.ajax({
                beforeSend:function() {
                    $(".mainbox").html(
                        `<div class="loading">
                        <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </div>`);
                },
                url: location.pathname,
                data: history.state,
                type: "post",
                success: function (data) {
                    $(".mainbox").html(data);
                },
                complete: function () {
                    $(window).scrollTop(y);
                    history.state.scrollY = y;
                    history.replaceState(history.state, null);
                }
            })
        })

        //測試紀錄：history.state雖然可以直接賦值，但一旦切頁就會消失
        //若要使該頁的history.state不管怎麼切頁都可以確實保存下去，一定得使用replaceState方法才行
        //可以先利用history.state.xxx的方式賦予新定義的值，再用history.replaceState(history.state,null)的方式更新

        //但!!是!!!該方法不能給值為null的history.state!
        //最少最少得先建立一個{}空物件給它才能使用上述方式賦值，WTF
        if (history.state == null) {
            history.replaceState({ ajax: true, scrollY: 0 }, null);
        }
        $(window).scroll(function () {
            history.state.scrollY = window.scrollY;
            history.replaceState(history.state, null);

        })

        /////////////////
        ///搜尋條棒相關///
        /////////////////

        //進階搜尋內容的初始化
        $.getJSON('@Url.Action("SetTypes","Search")', function (datas) {
            $.each(datas, function (name, value) {
                $("#adType").append(`<option value="${value.fTypeID}">${value.fTypeName}</option>`)
            })
        })
        $.getJSON('@Url.Action("SetKinds","Search")', function (datas) {
            $.each(datas, function (name, value) {
                $(".advancedBlock").append(`<div class="selectedItem" data-kind="${value.KindName}" data-color="${value.fColor}">${value.KindName}</div>`);
                $(".selectableItemPanel").append(`<div class="selectableItem" data-kind="${value.KindName}" data-color="${value.fColor}">${value.KindName}</div>`)
            })
            $(".advancedBlock").append('<div class="itemAdd"><i class="fa fa-plus"></i></div>');

            $(".itemAdd").click(function () {
                $(".selectableItemPanel").toggleClass("adSwitch");
            })

            //初始化進階面板曲風選項的顏色
            $(".selectableItemPanel").children(".selectableItem").each(function () {
                $(this).css("background-color", $(this).data("color"));
                $(this).css("background-image", `linear-gradient(to bottom,#16161660 100%,${$(this).data("color")})`);
            })
            $(".advancedBlock").children(".selectedItem").each(function () {
                $(this).css("background-color", $(this).data("color"));
                $(this).css("background-image", `linear-gradient(to bottom,#16161660 100%,${$(this).data("color")})`);
            })

            //選擇曲風
            $(".selectableItem").on("click", function () {
                let kindName = $(this).data("kind");
                $(this).css("display", "none");
                $(".advancedBlock").find(`[data-kind = '${kindName}']`).css("display", "inline-block");
                $(".selectableItemPanel").toggleClass("adSwitch");
            })
            //點擊選擇的曲風即可取消
            $(".selectedItem").on("click", function () {
                let kindName = $(this).data("kind");
                $(this).css("display", "none");
                $(".selectableItemPanel").find(`[data-kind = '${kindName}']`).css("display", "inline-block");
            })
        })

        //開啟進階搜尋版面、開啟曲風選擇版面
        $("#advancedBtn").click(function () {
            $(".advancedPanel").toggleClass("adSwitch");
        })
        $(".itemAdd").click(function () {
            $(".selectableItemPanel").toggleClass("adSwitch");
        })
        //點選搜尋區域以外的地方會自動關閉進階搜尋版面(很礙眼)
        $(document).mousedown(function (e) {
            if ($(e.target).parents(".searchBar").length == 0 &&
                $(e.target).parents(".ui-menu-item").length == 0) {
                $(".advancedPanel").removeClass("adSwitch");
            }
            if ($(e.target).parents(".selectableItemPanel").length == 0) {
                $(".selectableItemPanel").removeClass("adSwitch");
            }
        })

        //關鍵字搜尋(只查找歌名並輸出專輯與歌名(專輯可能重複))
        //用trim()除去空白字串
        $(".searchBtn").click(function () {
            let keyword = $(".searchtxt").val().trim();
            if (keyword == "") {
                return;
            }
            let url = `@Url.Action("Result", "Search")`;
            let stateObj = { keyword: keyword, ajax: true };
            $.ajax({
                beforeSend:function() {
                    $(".mainbox").html(
                        `<div class="loading">
                        <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </div>`);
                },
                url: url,
                data: stateObj,
                type: "post",
                success: function (data) {
                    $(".mainbox").html(data);
                }
            })
            history.pushState(stateObj, null, url);
        })

        //進階搜尋(找出符合條件的專輯(專輯不重複))
        $(".adSearchBtn").click(function () {
            $(".advancedPanel").toggleClass("adSwitch");
            let adSong = $("#adSong").val().trim();
            let adSinger = $("#adSinger").val().trim();
            let adGroup = $("#adGroup").val().trim();
            let adComposer = $("#adComposer").val().trim();
            let adAlbum = $("#adAlbum").val().trim();
            let adType = $("#adType").val();
            let adKinds = "";
            $(".advancedBlock").children(".selectedItem").each(function () {
                if ($(this).css("display") == "inline-block") {
                    adKinds += ($(this).data("kind") + ",");
                }
            })
            let url = `@Url.Action("AdvancedResult", "Search")`
            let stateObj = {
                adSong: adSong,
                adSinger: adSinger,
                adGroup: adGroup,
                adComposer: adComposer,
                adAlbum: adAlbum,
                adType: adType,
                adKinds: adKinds,
                ajax: true
            }

            $.ajax({
                beforeSend:function() {
                    $(".mainbox").html(
                        `<div class="loading">
                        <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </div>`);
                },
                url: url,
                data: stateObj,
                type: "post",
                success: function (data) {
                    $(".mainbox").html(data);
                }
            })
            history.pushState(stateObj, null, url);
        })

        //所有搜尋text實作autocomplete
        $(".searchtxt,#adSong").autocomplete({
            source: '@Url.Action("AutoCompleteSong", "Search")'
        });
        $("#adSinger").autocomplete({
             source: '@Url.Action("AutoCompleteSinger", "Search")'
        });
        $("#adGroup").autocomplete({
            source: '@Url.Action("AutoCompleteGroup", "Search")'
        });
        $("#adComposer").autocomplete({
            source: '@Url.Action("AutoCompleteComposer", "Search")'
        });
        $("#adAlbum").autocomplete({
            source: '@Url.Action("AutoCompleteAlbum", "Search")'
        });

        //讓左側選單被選擇時有點變化
        $(".menuItem").click(function () {
            $(this).parents("li").siblings().find(".menuItemSelected").children().css("color", "#656565");
            $(this).parents("li").siblings().find(".menuItemSelected").removeClass("menuItemSelected");
            $(this).addClass("menuItemSelected");
            $(this).children().css("color", "white");
        })

        //////////////////////////
        ///透過modal介面載入資訊///
        /////////////////////////

        //登入註冊介面與登出
        $("#loginInterface").on("click", function () {

            $.ajax({
                url:"@Url.Action("Login","MemberLogin")",
                type: "get",
                beforeSend:function() {
                    $("#modalContent").html(
                        `<div class="loading">
                        <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </div>`);
                },
                success: function (data) {
                    $("#modalContent").html(data);
                }
            })
            $("#modal").css("display", "block");
            setTimeout(function () {
                $("#modal").addClass("fadein");
                $("#modalContent").addClass("fadein");
            }, 10)
        })
        $("#logonInterface").on("click", function () {
            $.ajax({
                url:"@Url.Action("New","MemberLogin")",
                type: "get",
                beforeSend:function() {
                    $("#modalContent").html(
                        `<div class="loading">
                        <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </div>`);
                },
                success: function (data) {
                    $("#modalContent").html(data);
                }
            })
            $("#modal").css("display", "block");
            setTimeout(function () {
                $("#modal").addClass("fadein");
                $("#modalContent").addClass("fadein");
            }, 10)
        })

        //點擊主視窗以外的位置會讓介面消失
        $("#modal").click(function (e) {
            if ($(e.target).children("#modalContent").length != 0) {
                setTimeout(function () {
                    $("#modal").removeClass("fadein");
                    $("#modalContent").removeClass("fadein");
                }, 10)
                setTimeout(function () {
                    $("#modal").css("display", "none");
                }, 500)
            }
        })

        //操控播放清單與相關的功能
         $(".playListSwitch.s1").click(function () {
            $(".playListPanel").addClass("open");
               let plink = "@Url.Action("_PlayLists","Album")";
                 $.post(plink, {ajax:true}, function (data) {
                $(".playListPartialView").html(data);
            })
        })
        $(".playListSwitch.s2").click(function () {
            $(".playListPanel").removeClass("open");
        })
    </script>

    @RenderSection("scripts", required: false)
</body>
